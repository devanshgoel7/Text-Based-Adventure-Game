{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Game",
            "type": "shell",
            "command": "g++",
            "args": [
                    "-std=c++17",
                    "-g",
                    "main.cpp",
                    "class_files/area.cpp",
                    "class_files/enemy.cpp",
                    "class_files/fight.cpp",
                    "class_files/items.cpp",
                    "class_files/player.cpp",
                    "class_files/ui.cpp",
                    "-I", "header_files",
                    "-o", "game.exe",
                    "-Wall"
                    ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "Run Game",
            "type": "shell",
            "command": "./game.exe",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "dependsOn": ["Build Game"]
        }
    ]
}
